{% extends 'product/layout.html.twig' %}

{% block title %}{% endblock %}

{% block content %}
    <div class="card card-preview">
        <div class="card-inner">
            <div class="preview-block">
                <span class="preview-title-lg overline-title"> {{ product.name }}</span>
                <div class="nk-tb-list">
                    <div class="nk-tb-item nk-tb-head">
                        <div class="nk-tb-col nk-tb-col-check">
                            <div class="custom-control custom-control-sm custom-checkbox notext">
                                <input type="checkbox" class="custom-control-input" id="pid">
                                <label class="custom-control-label" for="pid"></label>
                            </div>
                        </div>
                        <div class="nk-tb-col"><span>Size</span></div>
                        <div class="nk-tb-col"><span>Price</span></div>
                        <div class="nk-tb-col nk-tb-col-tools">

                        </div>
                    </div><!-- .nk-tb-item -->
                    {% for price in prices %}
                        <div class="nk-tb-item">
                            <div class="nk-tb-col nk-tb-col-check">
                                <div class="custom-control custom-control-sm custom-checkbox notext">
                                    <input type="checkbox" class="custom-control-input" id="pid1">
                                    <label class="custom-control-label" for="pid1"></label>
                                </div>
                            </div>
                            <div class="nk-tb-col">
                                <span class="tb-lead">{{ price.getSize().getName() }}</span>
                            </div>
                            <div class="nk-tb-col">
                                <span class="tb-lead">{{ price.price }}</span>
                            </div>
                            <div class="nk-tb-col nk-tb-col-tools">
                                <ul class="nk-tb-actions gx-1 my-n1">
                                    <li class="mr-n1">
                                        <div class="dropdown">
                                            <a href="#" class="dropdown-toggle btn btn-icon btn-trigger" data-toggle="dropdown"><em class="icon ni ni-more-h"></em></a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <ul class="link-list-opt no-bdr">
                                                    <li><a href="{{ path('price_edit', {id: product.id, idPrice: price.id}) }}"><em class="icon ni ni-edit"></em><span>Update price</span></a></li>
                                                    <li>
                                                        <form method="post" action="{{ path('price_delete', {'id': price.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                            <a href="#">
                                                                <em class="icon ni ni-delete"></em>
                                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ price.id) }}">
                                                                <span><input type="submit"
                                                                             style="border: 0;
                                                                                 background-color: transparent;
                                                                                 padding: 0;
                                                                                 color: #526484;
                                                                                 font-size: 12px;
                                                                                 font-weight: 500;"
                                                                             value="Delete"></span>
                                                            </a>
                                                        </form>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div><!-- .nk-tb-item -->
                    {% endfor %}
                </div><!-- .nk-tb-list -->
            </div>
        </div>
    </div>
{% endblock %}
