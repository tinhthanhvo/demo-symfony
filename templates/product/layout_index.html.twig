{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        .user-edit { padding-right: 20px; cursor: pointer; color: #00f; }
        .user-delete { padding-left: 20px; cursor: pointer; color: #f00; }
        .btn-disable { cursor: default; color: #808080 !important; }
        .disabled-link { text-decoration: none; color: white; }
        .disabled-link:hover { color: white; }
    </style>
{% endblock %}

{% block body %}
    <div class="nk-content ">
        <div class="container-fluid">
            <div class="nk-content-inner">
                <div class="nk-content-body">
                    <div class="nk-block-head nk-block-head-sm">
                        <div class="nk-block-between">
                            <div class="nk-block-head-content">
                                <h3 class="nk-block-title page-title">{% block title %}Product management{% endblock %}</h3>
                                <div class="nk-block-des text-soft">
                                </div>
                            </div><!-- .nk-block-head-content -->
                            <div class="nk-block-head-content">
                                <div class="toggle-wrap nk-block-tools-toggle">
                                    <a href="#" class="btn btn-icon btn-trigger toggle-expand mr-n1" data-target="pageMenu"><em class="icon ni ni-more-v"></em></a>
                                    <div class="toggle-expand-content" data-content="pageMenu">
                                        <ul class="nk-block-tools g-3">
                                            <li class="nk-block-tools-opt"><a href="{{ path('product_add') }}" class="btn btn-primary"><em class="icon ni ni-plus"></em><span>Add Product</span></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div><!-- .nk-block-head-content -->
                        </div><!-- .nk-block-between -->
                    </div><!-- .nk-block-head -->
                    <div class="nk-block">
                        <div class="row g-gs">
                            <div class="col-xxl-12">
                                <div class="card card-bordered h-100">
                                    <div class="card-inner">
                                        {% block content %} {% endblock %}
                                    </div>
                                </div><!-- .card -->
                            </div><!-- .col -->
                        </div>
                    </div><!-- .nk-block -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}
